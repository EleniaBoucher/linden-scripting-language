{
    "version": "0.9.1",
    "command": "python",
    "isShellCommand": true,
    "tasks": [
        {
            "taskName": "build",
            "command": "lslint",
            "args": ["-p", "${file}"],
            "isBuildCommand": true,
            "isWatching": true,
            "problemMatcher": "$msCompile"
        }
    ],
    "problemMatcher": {
        "owner": "lsl",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning|info):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5,
//          location
//          endLine
//          endColumn
//          code
            "loop": true
        }
    }
}
